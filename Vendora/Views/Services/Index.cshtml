@model IEnumerable<Vendora.Models.Product>

@{
	ViewData["Title"] = "Our Services";
	Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<!-- Start Hero Section -->
<div class="hero">
	<div class="container">
		<div class="row justify-content-between">
			<div class="col-lg-5">
				<div class="intro-excerpt">
					<h1>Services</h1>
					<p class="mb-4">Discover stylish, high-quality furniture that transforms your home into a space of comfort and creativity. From timeless classics to modern designs — we bring elegance to every room.</p>
					<p><a asp-action="Index" asp-controller="Shop" class="btn btn-secondary me-2">Shop Now</a><a href="#why-choose-section" class="btn btn-white-outline">Explore</a></p>
				</div>
			</div>
			<div class="col-lg-7">
				<div class="hero-img-wrap">
					<img src="images/couch.png" class="img-fluid">
				</div>
			</div>
		</div>
	</div>
</div>
<!-- End Hero Section -->
<!-- Start Why Choose Us Section -->
<div class="why-choose-section">
	<div class="container">
		<div class="row justify-content-between">
			<div class="col-lg-6">
				<h2 class="section-title">Why Choose Us</h2>
				<p>We combine design expertise with exceptional service to help you create a home that reflects your personal style. From inspiration to delivery, we’re here every step of the way.</p>

				<div class="row my-5">
					<div class="col-6 col-md-6">
						<div class="feature">
							<div class="icon">
								<img src="images/truck.svg" alt="Fast Delivery" class="img-fluid">
							</div>
							<h3>Fast &amp; Free Shipping</h3>
							<p>Enjoy quick and free nationwide delivery on all major furniture orders with easy tracking updates.</p>
						</div>
					</div>

					<div class="col-6 col-md-6">
						<div class="feature">
							<div class="icon">
								<img src="images/bag.svg" alt="Easy Shopping" class="img-fluid">
							</div>
							<h3>Easy to Shop</h3>
							<p>Our intuitive platform makes it simple to browse collections, compare styles, and place your order in minutes.</p>
						</div>
					</div>

					<div class="col-6 col-md-6">
						<div class="feature">
							<div class="icon">
								<img src="images/support.svg" alt="Customer Support" class="img-fluid">
							</div>
							<h3>24/7 Support</h3>
							<p>Our friendly support team is always available to help — before, during, and after your purchase.</p>
						</div>
					</div>

					<div class="col-6 col-md-6">
						<div class="feature">
							<div class="icon">
								<img src="images/return.svg" alt="Hassle-free returns" class="img-fluid">
							</div>
							<h3>Hassle-Free Returns</h3>
							<p>If something doesn’t fit, return it easily within 30 days — no questions asked.</p>
						</div>
					</div>

				</div>
			</div>

			<div class="col-lg-5">
				<div class="img-wrap">
					<img src="images/why-choose-us-img.jpg" alt="Our team at work" class="img-fluid">
				</div>
			</div>

		</div>
	</div>
</div>
<!-- End Why Choose Us Section -->
<!-- Start Product Section -->
<div class="product-section">
	<div class="container">
		<div class="row">

			<!-- Start Column 1 -->
			<div class="col-md-12 col-lg-3 mb-5 mb-lg-0">
				<h2 class="mb-4 section-title">Crafted with Exceptional Materials</h2>
				<p class="mb-4">Every piece is carefully built from sustainable, premium materials that promise longevity, comfort, and style. Our craftsmanship ensures quality you can trust for years to come.</p>
				<p><a asp-controller="Shop" asp-action="Index" class="btn">Explore</a></p>
			</div>
			<!-- End Column 1 -->
			@for (int i = 0; i < 3; i++)
			{
				var product = Model.ElementAt(i);
				<div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
					<a class="product-item" asp-controller="Shop" asp-action="ProductDetails" asp-route-id="@product.ProductID">
						<img src="@Url.Content("~/images/" + (product.ProductImages?.FirstOrDefault(i => i.IsPrimary == true)?.ImageURL ?? product.ProductImages?.FirstOrDefault(i => i != null).ImageURL))"
							 class="img-fluid product-thumbnail" />
						<h3 class="product-title">@product.ProductName</h3>
						<strong class="product-price">$@product.Price</strong>

						<span class="icon-cross">
							<img src="images/cross.svg" class="img-fluid">
						</span>
					</a>
				</div>
			}

		</div>
	</div>
</div>
<!-- End Product Section -->
<!-- Start Testimonials -->
<div class="testimonial-section">
	<div class="container">
		<div class="row">
			<div class="col-lg-7 mx-auto text-center">
				<h2 class="section-title">Testimonials</h2>
			</div>
		</div>

		<div class="row justify-content-center">
			<div class="col-lg-12">
				<div class="testimonial-slider-wrap text-center">

					<div id="testimonial-nav">
						<span class="prev" data-controls="prev"><span class="fa fa-chevron-left"></span></span>
						<span class="next" data-controls="next"><span class="fa fa-chevron-right"></span></span>
					</div>

					<div class="testimonial-slider">

						<div class="item">
							<div class="row justify-content-center">
								<div class="col-lg-8 mx-auto">
									<div class="testimonial-block text-center">
										<blockquote class="mb-5">
											<p>&ldquo;The quality exceeded my expectations! The new sofa fits perfectly with my living room style — comfortable, durable, and beautifully made.&rdquo;</p>
										</blockquote>
										<div class="author-info">
											<div class="author-pic">
												<img src="images/person-1.png" alt="Maria Jones" class="img-fluid">
											</div>
											<h3 class="font-weight-bold">Maria Jones</h3>
											<span class="position d-block mb-3">Interior Designer</span>
										</div>
									</div>
								</div>
							</div>
						</div>

						<div class="item">
							<div class="row justify-content-center">
								<div class="col-lg-8 mx-auto">
									<div class="testimonial-block text-center">
										<blockquote class="mb-5">
											<p>&ldquo;Amazing service! The furniture arrived on time and the assembly was super easy. Highly recommend this store for modern designs.&rdquo;</p>
										</blockquote>
										<div class="author-info">
											<div class="author-pic">
												<img src="images/person-2.png" alt="David Kim" class="img-fluid">
											</div>
											<h3 class="font-weight-bold">David Kim</h3>
											<span class="position d-block mb-3">Homeowner</span>
										</div>
									</div>
								</div>
							</div>
						</div>

						<div class="item">
							<div class="row justify-content-center">
								<div class="col-lg-8 mx-auto">
									<div class="testimonial-block text-center">
										<blockquote class="mb-5">
											<p>&ldquo;Stylish furniture at reasonable prices! I’ve received so many compliments from friends — will definitely shop again.&rdquo;</p>
										</blockquote>
										<div class="author-info">
											<div class="author-pic">
												<img src="images/person-3.png" alt="Sophia Lee" class="img-fluid">
											</div>
											<h3 class="font-weight-bold">Sophia Lee</h3>
											<span class="position d-block mb-3">Architect</span>
										</div>
									</div>
								</div>
							</div>
						</div>

					</div>

				</div>
			</div>
		</div>
	</div>
</div>
<!-- End Testimonials -->
