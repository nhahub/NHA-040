@model IEnumerable<Vendora.Models.Product>

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<!-- Start Hero Section -->
<div class="hero">
	<div class="container">
		<div class="row justify-content-between">
			<div class="col-lg-5">
				<div class="intro-excerpt">
					<h1>Modern Interior <span class="d-block">Design Studio</span></h1>
					<p class="mb-4">Discover stylish, high-quality furniture that transforms your home into a space of comfort and creativity. From timeless classics to modern designs — we bring elegance to every room.</p>
					<p><a asp-controller="Shop" asp-action="Index" class="btn btn-secondary me-2">Shop Now</a><a href="#we-help-section" class="btn btn-white-outline">Explore</a></p>
				</div>
			</div>
			<div class="col-lg-7">
				<div class="hero-img-wrap">
					<img src="images/couch.png" class="img-fluid" alt="Modern luxury couch">
				</div>
			</div>
		</div>
	</div>
</div>
<!-- End Hero Section -->
<!-- Start Product Section -->
<div class="product-section">
	<div class="container">
		<div class="row">

			<!-- Start Column 1 -->
			<div class="col-md-12 col-lg-3 mb-5 mb-lg-0">
				<h2 class="mb-4 section-title">Crafted with Exceptional Materials</h2>
				<p class="mb-4">Every piece is carefully built from sustainable, premium materials that promise longevity, comfort, and style. Our craftsmanship ensures quality you can trust for years to come.</p>
				<p><a asp-controller="Shop" asp-action="Index" class="btn">Explore</a></p>
			</div>
			<!-- End Column 1 -->
			@for (int i = 0; i < 3; i++)
			{
				var product = Model.ElementAt(i);
			<div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0">
					<a class="product-item" asp-controller="ProductDetails" asp-action="Index" asp-route-id="@product.ProductID">
					<img src="@Url.Content("~/images/" + (product.ProductImages?.FirstOrDefault(i => i.IsPrimary == true)?.ImageURL ?? product.ProductImages?.FirstOrDefault(i => i != null).ImageURL))"
							 class="product-img product-thumbnail" />
					<h3 class="product-title">@product.ProductName</h3>
						<strong class="product-price">$@product.BasePrice</strong>

					<span class="icon-cross">
							<img src="images/cross.svg" class="img-fluid">
					</span>
				</a>
			</div>
			}

		</div>
	</div>
</div>
<!-- End Product Section -->
<!-- Start Why Choose Us Section -->
<div class="why-choose-section">
	<div class="container">
		<div class="row justify-content-between">
			<div class="col-lg-6">
				<h2 class="section-title">Why Choose Us</h2>
				<p>We combine design expertise with exceptional service to help you create a home that reflects your personal style. From inspiration to delivery, we’re here every step of the way.</p>

				<div class="row my-5">
					<div class="col-6 col-md-6">
						<div class="feature">
							<div class="icon">
								<img src="images/truck.svg" alt="Fast Delivery" class="img-fluid">
							</div>
							<h3>Fast &amp; Free Shipping</h3>
							<p>Enjoy quick and free nationwide delivery on all major furniture orders with easy tracking updates.</p>
						</div>
					</div>

					<div class="col-6 col-md-6">
						<div class="feature">
							<div class="icon">
								<img src="images/bag.svg" alt="Easy Shopping" class="img-fluid">
							</div>
							<h3>Easy to Shop</h3>
							<p>Our intuitive platform makes it simple to browse collections, compare styles, and place your order in minutes.</p>
						</div>
					</div>

					<div class="col-6 col-md-6">
						<div class="feature">
							<div class="icon">
								<img src="images/support.svg" alt="Customer Support" class="img-fluid">
							</div>
							<h3>24/7 Support</h3>
							<p>Our friendly support team is always available to help — before, during, and after your purchase.</p>
						</div>
					</div>

					<div class="col-6 col-md-6">
						<div class="feature">
							<div class="icon">
								<img src="images/return.svg" alt="Hassle-free returns" class="img-fluid">
							</div>
							<h3>Hassle-Free Returns</h3>
							<p>If something doesn’t fit, return it easily within 30 days — no questions asked.</p>
						</div>
					</div>

				</div>
			</div>

			<div class="col-lg-5">
				<div class="img-wrap">
					<img src="images/why-choose-us-img.jpg" alt="Our team at work" class="img-fluid">
				</div>
			</div>

		</div>
	</div>
</div>
<!-- End Why Choose Us Section -->
<!-- Start We Help Section -->
<div class="we-help-section" id="we-help-section">
	<div class="container">
		<div class="row justify-content-between">
			<div class="col-lg-7 mb-5 mb-lg-0">
				<div class="imgs-grid">
					<div class="grid grid-1"><img src="images/img-grid-1.jpg" alt="Furniture arrangement"></div>
					<div class="grid grid-2"><img src="images/img-grid-2.jpg" alt="Minimalist living space"></div>
					<div class="grid grid-3"><img src="images/img-grid-3.jpg" alt="Modern home decor"></div>
				</div>
			</div>
			<div class="col-lg-5 ps-lg-5">
				<h2 class="section-title mb-4">We Help You Design the Perfect Home</h2>
				<p>Our dedicated team of experts helps you choose the right furniture for your home. Whether you’re refreshing a single room or designing an entire space, we make it easy to bring your vision to life.</p>

				<ul class="list-unstyled custom-list my-4">
					<li>Personalized recommendations from interior specialists</li>
					<li>Exclusive designs crafted for modern living</li>
					<li>Durable furniture built with premium materials</li>
					<li>Free delivery and hassle-free returns</li>
				</ul>
				<p><a asp-controller="Shop" asp-action="Index" class="btn">Explore</a></p>
			</div>
		</div>
	</div>
</div>
<!-- End We Help Section -->
<!-- Start Popular Product -->
<div class="popular-product">
	<div class="container">
		<div class="row">
			@for (int i = 0;i<3;i++)
			{
				var product = Model.ElementAt(i);
				<div class="col-12 col-md-6 col-lg-4 mb-4 mb-lg-0">
					<div class="product-item-sm d-flex">
						<div class="thumbnail">
                        <img src="@Url.Content("~/images/" + (product.ProductImages?.FirstOrDefault(i => i.IsPrimary == true)?.ImageURL ?? product.ProductImages?.FirstOrDefault(i => i !=null).ImageURL))"
						class="img-fluid product-thumbnail" />
						</div>
						<div class="pt-3">
							<h3>@product.ProductName</h3>
							<p>@product.Description </p>
							<p><a asp-controller="ProductDetails" asp-action="Index" asp-route-id="@product.ProductID">Read More</a></p>
						</div>
					</div>
				</div>
			}
			

		</div>
	</div>
</div>
<!-- End Popular Product -->
